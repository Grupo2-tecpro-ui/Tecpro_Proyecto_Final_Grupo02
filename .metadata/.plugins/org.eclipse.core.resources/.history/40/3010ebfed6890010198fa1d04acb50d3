package GUI;
import javax.swing.*;
import java.awt.*;
public class MainMenu extends JFrame {
	public MainMenu() {
        setTitle("MenÃº Principal - Registro de Visitas");
        setSize(500, 300);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        JPanel panel = new JPanel(new GridLayout(3, 1, 10, 10));

        JButton registrarVisitaButton = new JButton("Registrar Visita");
        JButton verReportesButton = new JButton("Ver Reportes");
        JButton salirButton = new JButton("Salir");

        panel.add(registrarVisitaButton);
        panel.add(verReportesButton);
        panel.add(salirButton);

        add(panel);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            new MainMenu().setVisible(true);
        });
    }

}
